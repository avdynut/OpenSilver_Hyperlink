<sdk:Page x:Class="OpenSilver_Hyperlink.MainPage"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
          FontSize="14"
          mc:Ignorable="d">
    <Page.Resources>
        <ControlTemplate x:Key="SimpleHyperlinkButtonTemplate" TargetType="HyperlinkButton">
            <Grid>
                <Grid.Resources>
                    <Storyboard x:Key="UnderlineStoryboard">
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextBlock"
                                                       Storyboard.TargetProperty="TextDecorations"
                                                       Duration="0">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="Underline"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextBlock"
                                                       Storyboard.TargetProperty="Effect"
                                                       Duration="0">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <DropShadowEffect BlurRadius="1"
                                                      ShadowDepth="1"
                                                      Color="#FF73A9D8"/>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                    <Storyboard x:Key="NormalStoryboard">
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextBlock"
                                                       Storyboard.TargetProperty="Effect"
                                                       Duration="0">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <DropShadowEffect BlurRadius="0" ShadowDepth="0"/>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </Grid.Resources>
                <TextBlock x:Name="TextBlock"
                           Margin="{TemplateBinding Padding}"
                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                           Background="{TemplateBinding Background}"
                           Cursor="{TemplateBinding Cursor}"
                           Text="{TemplateBinding Content}"/>
                <Rectangle x:Name="FocusVisualElement"
                           IsHitTestVisible="false"
                           Opacity="0"
                           Stroke="#FF6DBDD1"
                           StrokeThickness="1"/>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" Storyboard="{StaticResource NormalStoryboard}"/>
                        <VisualState x:Name="MouseOver" Storyboard="{StaticResource UnderlineStoryboard}"/>
                        <VisualState x:Name="Pressed" Storyboard="{StaticResource UnderlineStoryboard}"/>
                        <VisualState x:Name="Disabled">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="TextBlock"
                                                               Storyboard.TargetProperty="Foreground"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="#FFAAAAAA"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                    <VisualStateGroup x:Name="FocusStates">
                        <VisualState x:Name="Focused">
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetName="FocusVisualElement"
                                                 Storyboard.TargetProperty="Opacity"
                                                 To="1"
                                                 Duration="0"/>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Unfocused" Storyboard="{StaticResource NormalStoryboard}"/>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
            </Grid>
        </ControlTemplate>
        <ControlTemplate x:Key="LiteHyperlinkButtonTemplate" TargetType="HyperlinkButton">
            <Grid Background="{TemplateBinding Background}" Cursor="{TemplateBinding Cursor}">
                <TextBlock x:Name="OverlayTextBlock"
                           Margin="{TemplateBinding Padding}"
                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                           VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                           Canvas.ZIndex="1"
                           Text="{TemplateBinding Content}"
                           Visibility="Collapsed"/>
                <ContentPresenter x:Name="contentPresenter"
                                  Margin="{TemplateBinding Padding}"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"/>
                <Border x:Name="FocusVisualElement"
                        Margin="1"
                        BorderBrush="#FF6DBDD1"
                        BorderThickness="1"
                        IsHitTestVisible="false"
                        Opacity="0"/>
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverlayTextBlock"
                                                               Storyboard.TargetProperty="Visibility"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
                                            <Visibility>Visible</Visibility>
                                        </DiscreteObjectKeyFrame.Value>
                                    </DiscreteObjectKeyFrame>
                                </ObjectAnimationUsingKeyFrames>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverlayTextBlock"
                                                               Storyboard.TargetProperty="TextDecorations"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0" Value="Underline"/>
                                </ObjectAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="Pressed">
                            <Storyboard>
                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="OverlayTextBlock"
                                                               Storyboard.TargetProperty="Visibility"
                                                               Duration="0">
                                    <DiscreteObjectKeyFrame KeyTime="0">
                                        <DiscreteObjectKeyFrame.Value>
